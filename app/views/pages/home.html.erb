 <% content_for :navbar do %>
      <%= render 'shared/navbar_home' %>
 <% end %>
<%= render 'shared/banner' %>

<div class="container mt-4 py-4">
  <div class="row">
    <div class="col-3 d-flex align-items-stretch">
      <div class="card rounded-0" style="width: 18rem;">
        <div class="card-img-top text-center pt-4">
          <%=image_tag("blueprint.svg")%>
        </div>
          <div class="card-body">
            <p class="card-text text-center">Imaginez votre meuble</p>
          </div>
      </div>
    </div>

    <div class="col-3 d-flex align-items-stretch">
      <div class="card rounded-0" style="width: 18rem;">
        <div class="card-img-top text-center pt-4">
          <%=image_tag("geometry.svg")%>
        </div>
          <div class="card-body">
            <p class="card-text text-center">Modélisez-le facilement</p>
          </div>
      </div>
    </div>

    <div class="col-3 d-flex align-items-stretch">
      <div class="card rounded-0" style="width: 18rem;">
        <div class="card-img-top text-center pt-4">
          <%=image_tag("settings.svg")%>
        </div>
          <div class="card-body">
            <p class="card-text text-center">Un artisan produit votre création</p>
          </div>
      </div>
    </div>

    <div class="col-3 d-flex align-items-stretch">
      <div class="card rounded-0" style="width: 18rem;">
        <div class="card-img-top text-center pt-4">
          <%=image_tag("armchair.svg")%>
        </div>
          <div class="card-body">
            <p class="card-text text-center">Livré directement chez vous</p>
          </div>
      </div>
    </div>
  </div>
</div>

<div class="container py-4">
  <div class="cards">

    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(https://static.turbosquid.com/Preview/2019/03/19__04_10_54/industrial_table_00.jpg5B321C05-F279-48C2-AFEE-5F9E0EE4BB76Zoom.jpg)">
      <%= link_to "Tables", pieces_path(query: "table"), class: "btn btn-ghost" %>
    </div>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(https://media.madeindesign.com/nuxeo/products/c/a/bibliotheque-mikado-large-rouge_madeindesign_74145_original.jpg)">
      <%= link_to "Etagères", pieces_path(query: "étagères") , class: "btn btn-ghost" %>
    </div>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(https://cdn.conforama.fr/prod/product/image/38d2/G_CNF_I52807871_B.jpeg)">
      <%= link_to "Commodes", pieces_path(query: "commode"), class: "btn btn-ghost" %>
    </div>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(https://www.made-in-meubles.com/media/catalog/product/optimized/2/e/2ea75696a4d7e9b6182055f87ecaaffc/bt0200a-meubletv-dessus.jpg">
      <%= link_to "Meubles TV", pieces_path(query: "meuble tv"), class: "btn btn-ghost" %>
    </div>
  </div>
</div>

<% content_for :head do %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
<% end %>

