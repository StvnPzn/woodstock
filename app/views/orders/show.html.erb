<%= link_to "Home", root_path %>
<%= link_to "Categories", categories_path %>
<%= link_to "Meuble", piece_path %>

<%= @order.piece.name %>

<div class="container">

  <h1>Commande #<%= @order.id %></h1>

  <div class="cont-all mt-3 d-flex justify-content-between">
    <div class="card-img-show">
      <% if @order.piece.photo.attached? %>
        <%= cl_image_tag @order.piece.photo.key, :width=>500, :height=>350, :crop=>"fill", class: "card-img-top zoom"%>
      <% end %>
    </div>
    <div class="card-inner pl-3 mx-5">
      <h2 class="pb-2"><%= @order.piece.name.capitalize %></h2>
      <div class="inner-desc my-3"><em>Récapitulatif des XXX :</em></div>
        <div class="inner-text d-flex justify-content-around">
          <div class="mt-3">
            <p><strong>Plateau :</strong></p>
            <p><u>Couleur :</u> <%= @top.translated_color %><br>
              <u>Dimension :</u> <%= @top.length %>x<%= @top.width %>x<%= @top.height %><br>
              <u>Matériau :</u> <%= @top.translated_material %><br>
              <u>Forme :</u> <%= @top.translated_shape %></p>
          </div>
          <div class="mt-3">
            <p><strong>Pieds :</strong></p>
            <p><u>Couleur :</u> <%= @bottom.translated_color %><br>
              <u>Dimension :</u> <%= @bottom.length %>x<%= @bottom.width %>x<%= @bottom.height %><br>
              <u>Matériau :</u> <%= @bottom.translated_material %><br>
              <u>Forme :</u> <%= @bottom.translated_shape %></p>
          </div>
        </div>
    </div>
  </div>

  <div class="cont-progress py-3 mt-3">
    <ul class="progressbar">
      <li>En attente de confirmation</li>
      <li>En cours de fabrication</li>
      <li>Expédiée</li>
      <li>Livrée</li>
    </ul>
  </div>

</div>

