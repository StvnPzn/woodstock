<div class="container">

  <h1 class="mt-3"><%= @piece.category.title.capitalize %> <small>></small></h1>
  
    <div class="cont-all mt-3 d-flex justify-content-between">
      <div class="card-img-show">
        <% if @piece.photo.attached? %>
          <%= cl_image_tag @piece.photo.key, :width=>500, :height=>350, :crop=>"fill", class: "card-img-top zoom"%>
        <% end %>
      </div>
      <div class="card-inner pl-3 mx-5">
        <h2 class="pb-2"><%= @piece.name.capitalize %></h2>
        <div class="inner-desc my-3"><em>Description du produit à venir</em></div>
          <div class="inner-text d-flex justify-content-around">
            <div class="mt-3">
              <p><strong>Plateau :</strong></p>
              <p><u>Couleur :</u> <%= @top.translated_color %><br>
                <u>Dimension :</u> <%= @top.length %>x<%= @top.width %>x<%= @top.height %><br>
                <u>Matériau :</u> <%= @top.translated_material %><br>
                <u>Forme :</u> <%= @top.translated_shape %></p>
            </div>
            <div class="mt-3">
              <p><strong>Pieds :</strong></p>
              <p><u>Couleur :</u> <%= @bottom.translated_color %><br>
                <u>Dimension :</u> <%= @bottom.length %>x<%= @bottom.width %>x<%= @bottom.height %><br>
                <u>Matériau :</u> <%= @bottom.translated_material %><br>
                <u>Forme :</u> <%= @bottom.translated_shape %></p>
            </div>
          </div>
          <div class="inner-button d-flex justify-content-center mt-4">
            <button class = "btn btn-primary px-4"><%= link_to "Partir de ce modèle", pieces_path(id: @piece.id), method: :post %></button>
          </div>
      </div>
    </div>


<% if @editable %>
  <div class="d-flex justify-content-between">
    <div class="detail-card mt-3">
      <p>Toutes les infos de l'artisan assigné</p>
    </div>
    <div class="detail-card mt-3 d-flex flex-column justify-content-around align-items-center">
        <p>Le prix estimé de votre objet est de : 350€*</p>
        <div class="d-flex">
          <%= link_to "Achat", piece_path, :class => "btn btn-primary mr-3" %>
          <%= link_to "Annuler", piece_path, :class => "btn btn-primary ml-3" %>
        </div>
    </div>
  </div>
<% end %>



</div>

